<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image">

    <com.dpcsa.compon.custom_components.SheetBottom
        android:id="@+id/search_t"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:noSwipeHide="true"
        app:noBackPressedHide="true"
        app:viewId="@layout/view_search_t"/>

    <com.dpcsa.compon.custom_components.SheetBottom
        android:id="@+id/hot_t"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:noSwipeHide="true"
        app:noBackPressedHide="true"
        app:viewMatch="true"
        app:viewId="@layout/view_hot_t"/>

    <com.dpcsa.compon.custom_components.ComponMenuB
        android:id="@+id/menu_b"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rect_transpar_24"
        app:imageLocale="left"
        app:selectBackground="@drawable/rect_w_28"
        app:noSelImgChangeColor="true"
        app:toAnimate="false"
        />

</RelativeLayout>