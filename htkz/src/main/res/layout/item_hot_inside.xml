<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        android:layout_marginTop="@dimen/d_8"
        android:layout_marginBottom="@dimen/d_8"
        android:layout_marginLeft="@dimen/d_16"
        android:layout_marginRight="@dimen/d_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius_top_left="14dp"
                app:riv_corner_radius_top_right="14dp"/>

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="@dimen/d_14"
                android:text="-33%"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/white"
                android:background="@drawable/rect_red_5"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10"
                android:layout_marginLeft="@dimen/d_14"
                android:layout_marginRight="@dimen/d_14"
                android:layout_below="@+id/img"
                android:text="Лучшие отели Пхукета\nна первой линии!"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/black"
                android:lineSpacingExtra="6sp"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10"
                android:layout_marginLeft="@dimen/d_14"
                android:layout_marginRight="@dimen/d_14"
                android:layout_below="@+id/title"
                android:text="Предлагаем Вашему вниманию ТОП лучших отелей находящихся на первой линии!\nОтели с прекрасным сервисом и прямым доступом к морю! Виза оформляется по прилету!"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                android:lineSpacingExtra="4sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txt"
                android:layout_marginTop="@dimen/d_20"
                android:layout_marginLeft="@dimen/d_14"
                android:layout_marginRight="@dimen/d_14"
                android:background="@color/progress_stroke"/>

            <TextView
                android:id="@+id/no_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_marginTop="43dp"
                android:layout_marginLeft="@dimen/d_14"
                android:layout_marginBottom="@dimen/d_14"
                android:paddingLeft="@dimen/d_8"
                android:paddingRight="@dimen/d_8"
                android:paddingTop="@dimen/d_6"
                android:paddingBottom="@dimen/d_6"
                android:background="@drawable/rect_accent_4"
                android:text="Осталось 2 дня"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12"
                android:lineSpacingExtra="4sp"/>

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_alignParentRight="true"
                android:layout_marginTop="47dp"
                android:layout_marginRight="14dp"
                android:text="от 327 500 T"
                android:textSize="@dimen/sp_22"
                android:textColor="@color/dark"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="2sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_alignParentRight="true"
                android:layout_marginTop="31dp"
                android:layout_marginRight="14dp">
                <TextView
                    android:id="@+id/cost_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="от 327 500 T"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:letterSpacing="0.04"
                    android:lineSpacingExtra="4sp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignStart="@id/cost_old"
                    android:layout_alignEnd="@id/cost_old"
                    android:layout_marginTop="8dp"
                    android:background="@color/black_40" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>