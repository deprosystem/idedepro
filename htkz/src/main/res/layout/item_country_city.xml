<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/country"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/flag"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_20"
        android:scaleType="centerCrop"
        app:riv_corner_radius="16dp" />

    <ImageView
        android:id="@+id/selcity"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/arrow"
        android:padding="@dimen/d_16"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d_20"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/country_name"
            style="@style/st_16_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/visa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/st_txt_12_40"
            android:text="@string/visa" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/d_20"
        android:layout_marginRight="@dimen/d_20"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_20"/>
</RelativeLayout>