<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/no_data"
        android:layout_below="@id/statStr"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/color_112"
    >
        <com.dpcsa.compon.custom_components.ComponImageView
            android:id="@+id/img_bl"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon_avatar_null"
            android:scaleType="centerCrop"
            app:oval="true"
            />

        <TextView
            android:id="@+id/enter"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_bl"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:textSize="@dimen/dim_24"
            android:textColor="@color/title"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/statStr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_24"
        android:background="@color/color_112"
        />

    <com.dpcsa.compon.custom_components.ElementMenu
        android:id="@+id/menu"
        android:layout_marginTop="148dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>