<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/T_0"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_56"
>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        />

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/selcity"
        android:layout_toRightOf="@id/flag"
        android:layout_marginLeft="@dimen/dim_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/visa"
            android:layout_below="@id/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нужна виза"
            android:textSize="@dimen/dim_12"
            />

    </RelativeLayout>
    <com.dpcsa.compon.custom_components.ComponImageView
        android:id="@+id/flag"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_width="@dimen/dim_32"
        android:layout_height="@dimen/dim_32"
        android:scaleType="centerCrop"
        app:corners="16dp"
        />

    <com.dpcsa.compon.custom_components.ComponImageView
        android:id="@+id/selcity"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dim_20"
        android:layout_width="@dimen/dim_56"
        android:layout_height="@dimen/dim_56"
        android:padding="@dimen/dim_16"
        android:src="@drawable/arrow"
        android:scaleType="centerCrop"
        />

</RelativeLayout>