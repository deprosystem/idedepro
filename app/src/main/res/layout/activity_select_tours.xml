<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/primary"
    >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dim_56"
            android:layout_height="@dimen/dim_56"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dim_16"
            android:src="@drawable/arrow_back"
            android:scaleType="centerCrop"
        />
        <RelativeLayout
            android:id="@+id/marsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_40"
        >
            <TextView
                android:id="@+id/depart_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dim_2"
                android:textSize="@dimen/dim_20"
                android:textColor="@color/white"
            />
            <ImageView
                android:id="@+id/fl"
                android:layout_width="@dimen/dim_24"
                android:layout_height="@dimen/dim_24"
                android:layout_toRightOf="@id/depart_city_name"
                android:layout_marginLeft="@dimen/dim_4"
                android:src="@drawable/plane"
                android:scaleType="centerCrop"
            />
            <TextView
                android:id="@+id/country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/depart_city_name"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/dim_20"
                android:textColor="@color/white"
            />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool"
    />
</RelativeLayout>