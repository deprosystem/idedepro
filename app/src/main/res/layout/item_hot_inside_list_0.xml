<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/T_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_14"
        android:layout_marginTop="@dimen/dim_8"
        android:layout_marginRight="@dimen/dim_14"
        android:layout_marginBottom="@dimen/dim_8"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="centerCrop"
            />
            <TextView
                android:id="@+id/discont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_1007"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_16"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingRight="6dp"
                android:paddingBottom="3dp"
                android:textSize="22dp"
                android:textColor="@color/white"
            />
            <TextView
                android:id="@+id/no_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_1008"
                android:layout_below="@id/txt"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="@dimen/dim_24"
                android:layout_marginBottom="@dimen/dim_16"
                android:paddingLeft="@dimen/dim_8"
                android:paddingTop="6dp"
                android:paddingRight="@dimen/dim_8"
                android:paddingBottom="6dp"
                android:textSize="@dimen/dim_14"
                android:textColor="@color/title"
            />
            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txt"
                android:layout_marginTop="@dimen/dim_24"
                android:layout_marginRight="@dimen/dim_16"
                android:textSize="21dp"
            />
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_12"
                android:textSize="22dp"
                android:textColor="@color/title"
            />
            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_12"
                android:textSize="@dimen/dim_14"
                android:textColor="@color/title"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_below="@id/txt"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="@dimen/dim_12"
                android:layout_marginRight="@dimen/dim_12"
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>