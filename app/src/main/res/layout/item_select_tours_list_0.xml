<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/T_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginTop="@dimen/dim_8"
        android:layout_marginRight="@dimen/dim_16"
        android:layout_marginBottom="@dimen/dim_8"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="centerCrop"
            />
            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_1026"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dim_18"
                android:layout_marginTop="@dimen/dim_14"
                android:paddingLeft="@dimen/dim_8"
                android:paddingRight="@dimen/dim_8"
                android:textSize="22dp"
                android:textColor="@color/white"
            />
            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stars"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="@dimen/dim_2"
                android:layout_marginRight="@dimen/dim_14"
                android:textSize="22dp"
                android:textColor="@color/text"
            />
            <TextView
                android:id="@+id/country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotel_name"
                android:layout_marginLeft="@dimen/dim_14"
                android:textSize="@dimen/dim_12"
                android:textColor="@color/black_50"
            />
            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/country_name"
                android:layout_below="@id/hotel_name"
                android:layout_marginLeft="@dimen/dim_8"
                android:textSize="@dimen/dim_14"
            />
            <TextView
                android:id="@+id/descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_name"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_14"
                android:textSize="@dimen/dim_14"
                android:textColor="@color/text"
            />
            <TextView
                android:id="@+id/min_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/currency"
                android:layout_below="@id/za"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_2"
                android:textSize="22dp"
                android:textColor="@color/text"
            />
            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/za"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_14"
                android:textSize="22dp"
                android:textColor="@color/text"
            />
            <com.dpcsa.compon.custom_components.TextViewNumberGrammar
                android:id="@+id/adults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/za"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="@dimen/dim_16"
                android:textSize="@dimen/dim_12"
                android:textColor="@color/primaryDark"
                app:stringArray="@string/SELECT_TOURSadultsgrammar"
            />
            <com.dpcsa.compon.custom_components.TextViewNumberGrammar
                android:id="@+id/kids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/adults"
                android:layout_below="@id/za"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_marginTop="@dimen/dim_16"
                android:textSize="@dimen/dim_12"
                android:textColor="@color/primaryDark"
                app:stringArray="@string/SELECT_TOURSkidsgrammar"
                app:zeroNotView="true"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_below="@id/descript"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_14"
            />
            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_32"
                android:background="@drawable/shape_1027"
                android:layout_below="@id/descript"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="@dimen/dim_24"
            >
                <com.dpcsa.compon.custom_components.ComponTextView
                    android:id="@+id/depart_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_32"
                    android:layout_marginRight="@dimen/dim_8"
                    android:textSize="@dimen/dim_12"
                    app:dateFormat="d MMMM"
                />
                <ImageView
                    android:layout_width="@dimen/dim_24"
                    android:layout_height="@dimen/dim_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:src="@drawable/calendar"
                    android:scaleType="centerCrop"
                />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/nightR"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_32"
                android:background="@drawable/shape_1027"
                android:layout_toRightOf="@id/date"
                android:layout_below="@id/descript"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_marginTop="@dimen/dim_24"
            >
                <com.dpcsa.compon.custom_components.TextViewNumberGrammar
                    android:id="@+id/night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_32"
                    android:layout_marginRight="@dimen/dim_8"
                    android:textSize="@dimen/dim_12"
                    app:stringArray="@string/SELECT_TOURSnightgrammar"
                />
                <ImageView
                    android:layout_width="@dimen/dim_24"
                    android:layout_height="@dimen/dim_24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dim_4"
                    android:src="@drawable/nights"
                    android:scaleType="centerCrop"
                />
            </RelativeLayout>
            <com.dpcsa.compon.custom_components.Ratings
                android:id="@+id/stars"
                android:layout_width="105dp"
                android:layout_height="15dp"
                android:layout_below="@id/photo"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="@dimen/dim_8"
                app:widthStar="15dp"
                app:star="@drawable/star"
                app:starFilled="@drawable/star_filled"
                app:amountStars="5"
            />
            <TextView
                android:id="@+id/za"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="10dp"
                android:text="Цена за"
                android:textSize="@dimen/dim_12"
                android:textColor="@color/primaryDark"
            />
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/nightR"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_16"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text"
                    android:layout_centerVertical="true"
                />
                <TextView
                    android:id="@+id/cost_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/dim_14"
                    android:textColor="@color/text"
                />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/min_cost"
                android:layout_below="@id/za"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_2"
                android:textSize="22dp"
                android:textColor="@color/text"
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>