<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/_txt_inp_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginTop="50dp"
            android:layout_marginRight="@dimen/dim_12"
            app:hintTextAppearance="@style/txtInpt_12_21">
            <com.dpcsa.compon.custom_components.ComponEditText
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/editStyle_21_2"
                android:imeOptions="actionNext"
                app:textError="@string/sin_login_error"
                app:minLength="5"
                android:inputType="text"
                android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/_txt_inp_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/_txt_inp_login"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginTop="@dimen/dim_28"
            android:layout_marginRight="@dimen/dim_12"
            app:hintTextAppearance="@style/txtInpt_12_21">
            <com.dpcsa.compon.custom_components.ComponEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/editStyle_21_2"
                android:imeOptions="actionNext"
                app:textError="@string/sin_password_error"
                app:isPassword="true"
                app:validPassword="aA0"
                app:idShowPassword="@id/vv"
                app:idHidePassword="@id/no_v"
                android:maxLines="1"
                app:minLength="5"
                android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/send"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/_txt_inp_password"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="@dimen/dim_40"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_1000"
            android:gravity="center"
            android:text="Send"
            android:textSize="@dimen/dim_24"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/noauth"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/send"
            android:layout_marginTop="@dimen/dim_40"
            android:layout_width="300dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Войти без авторизации"
            android:textSize="22dp"
            android:textColor="@color/color_103"
            />

        <com.dpcsa.compon.custom_components.ComponImageView
            android:id="@+id/vv"
            android:layout_alignParentRight="true"
            android:layout_below="@id/_txt_inp_login"
            android:layout_marginTop="@dimen/dim_20"
            android:layout_marginRight="@dimen/dim_14"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:src="@drawable/_visibility_ff000000"
            android:scaleType="centerCrop"
            />

        <com.dpcsa.compon.custom_components.ComponImageView
            android:id="@+id/no_v"
            android:layout_alignParentRight="true"
            android:layout_below="@id/_txt_inp_login"
            android:layout_marginTop="@dimen/dim_20"
            android:layout_marginRight="@dimen/dim_14"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/_visibility_off_ff000000"
            android:scaleType="centerCrop"
            />

    </RelativeLayout>
</RelativeLayout>