<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/T_0"
    android:layout_width="match_parent"
    android:layout_height="72dp"
>
    <com.dpcsa.compon.custom_components.TextViewNumberGrammar
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rr"
        android:layout_marginLeft="@dimen/dim_4"
        android:textSize="@dimen/dim_14"
        android:textColor="@color/text"
        app:stringArray="@string/WHO_FLYINGtitlegrammar"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_marginRight="@dimen/dim_20"
    />
    <TextView
        android:id="@+id/rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dim_20"
        android:text="Ребенок,"
        android:textSize="@dimen/dim_14"
        android:textColor="@color/text"
    />
    <RelativeLayout
        android:id="@+id/del_kind"
        android:layout_width="@dimen/dim_40"
        android:layout_height="@dimen/dim_40"
        android:background="@drawable/shape_1022"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dim_20"
    >
        <ImageView
            android:layout_width="@dimen/dim_16"
            android:layout_height="@dimen/dim_16"
            android:layout_centerInParent="true"
            android:src="@drawable/minus"
            android:scaleType="centerCrop"
        />
    </RelativeLayout>
</RelativeLayout>