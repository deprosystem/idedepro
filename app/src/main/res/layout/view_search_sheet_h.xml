<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_1002"
    android:layout_marginTop="124dp"
>
    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="72dp"
    >
        <ImageView
            android:id="@+id/hot_flag_country"
            android:layout_width="@dimen/dim_24"
            android:layout_height="@dimen/dim_16"
            android:layout_marginLeft="@dimen/dim_20"
            android:layout_marginTop="34dp"
            android:src="@drawable/flag_kaz"
            android:scaleType="centerCrop"
        />
        <TextView
            android:id="@+id/hot_depart_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="34dp"
            android:text="Алматы"
            android:textSize="@dimen/dim_18"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_20"
            android:layout_marginTop="@dimen/dim_16"
            android:text="Город вылета"
            android:textSize="@dimen/dim_12"
            android:textColor="@color/black_50"
        />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/panel"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
    />
</RelativeLayout>