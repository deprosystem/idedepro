<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <ScrollView
        android:layout_above="@id/cc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <RelativeLayout
            android:id="@+id/scroll_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
            <com.dpcsa.compon.custom_components.ComponImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/_txt_inp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_12"
                app:hintTextAppearance="@style/txtInpt_12_21">
                <com.dpcsa.compon.custom_components.ComponEditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/_txt_inp_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/_txt_inp_title"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_12"
                app:hintTextAppearance="@style/txtInpt_12_21">
                <com.dpcsa.compon.custom_components.ComponEditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

            <com.dpcsa.compon.custom_components.Gallery
                android:id="@+id/gal"
                android:layout_below="@id/_txt_inp_price"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_12"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:indicator="@id/ind_gal"
                />

            <com.dpcsa.compon.custom_components.PagerIndicator
                android:id="@+id/ind_gal"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/_txt_inp_price"
                android:layout_marginTop="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:diametrItem="7dp"
                app:colorNorm="@color/accent"
                app:colorSelect="@color/accentDark"
                />

            <com.dpcsa.compon.custom_components.ComponSpinner
                android:id="@+id/spinner"
                android:layout_below="@id/del"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
            />
            <com.dpcsa.compon.custom_components.ComponSpinner
                android:id="@+id/model"
                android:layout_toRightOf="@id/spinner"
                android:layout_below="@id/del"
                android:layout_marginLeft="@dimen/dim_16"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
            />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/_txt_inp_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginRight="@dimen/dim_12"
                app:hintTextAppearance="@style/txtInpt_12_21">
                <com.dpcsa.compon.custom_components.ComponEditText
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:imeOptions="actionNext"
                    android:maxLength="300"
                    android:inputType="textMultiLine"
                    android:maxLines="4"/>
                </com.google.android.material.textfield.TextInputLayout>

            <com.dpcsa.compon.custom_components.ComponImageView
                android:id="@+id/camera"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="94dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/camera"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/del"
                android:layout_below="@id/gal"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Delete img"
                android:textSize="@dimen/dim_20"
                />

            <com.dpcsa.compon.custom_components.ComponImageView
                android:id="@+id/gal_add"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/_txt_inp_price"
                android:layout_marginTop="80dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/camera"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/mov"
                android:layout_toRightOf="@id/del"
                android:layout_below="@id/gal"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginTop="10dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Move"
                android:textSize="@dimen/dim_20"
                />

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/cc"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
    >
        <RelativeLayout
            android:id="@+id/z"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyDark"
            />

        <TextView
            android:id="@+id/send"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_1000"
            android:gravity="center"
            android:text="Send"
            android:textSize="@dimen/dim_24"
            android:textColor="@color/white"
            />

    </RelativeLayout>
</RelativeLayout>