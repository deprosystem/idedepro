            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/_txt_inp_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/_txt_inp_phone"
                android:layout_marginLeft="@dimen/dim_14"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_14"
                app:hintTextAppearance="@style/txtInpt_12_21">
                <com.dpcsa.compon.custom_components.ComponEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    app:isPassword="true"
                    app:equalsId="@id/pas_equ"
                    app:idShowPassword="@id/eye_a"
                    app:idHidePassword="@id/n_eye_a"
                    android:maxLines="1"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/send"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/_txt_inp_pas_equ"
                android:layout_marginTop="@dimen/dim_40"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_1000"
                android:gravity="center"
                android:text="Send"
                android:textSize="@dimen/dim_24"
                android:textColor="@color/white"
                />

