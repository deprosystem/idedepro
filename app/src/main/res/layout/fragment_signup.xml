            <com.dpcsa.compon.custom_components.ComponImageView
                android:id="@+id/eye_op_rep"
                android:layout_alignParentRight="true"
                android:layout_below="@id/_txt_inp_password"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_12"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/eye_open"
                android:scaleType="centerCrop"
                />

            <com.dpcsa.compon.custom_components.ComponImageView
                android:id="@+id/eye_cl_rep"
                android:layout_alignParentRight="true"
                android:layout_below="@id/_txt_inp_password"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginRight="@dimen/dim_12"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/eye_close"
                android:scaleType="centerCrop"
                />

            <com.dpcsa.compon.custom_components.ComponImageView
                android:id="@+id/phot_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="87dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/camera"
                android:scaleType="centerCrop"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>