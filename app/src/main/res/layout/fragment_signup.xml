            <TextView
                android:id="@+id/send"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/_txt_inp_rep"
                android:layout_marginTop="@dimen/dim_40"
                android:layout_width="200dp"
                android:layout_height="@dimen/dim_40"
                android:background="@drawable/shape_1000"
                android:gravity="center"
                android:text="Send"
                android:textSize="@dimen/dim_24"
                android:textColor="@color/white"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/_txt_inp_rep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/_txt_inp_password"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dim_12"
                app:hintTextAppearance="@style/txtInpt_12_21">
                <com.dpcsa.compon.custom_components.ComponEditText
                    android:id="@+id/rep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/editStyle_21_1"
                    android:hint="Repeat password"
                    android:imeOptions="actionNext"
                    app:isPassword="true"
                    app:idShowPassword="@id/eye_op_rep"
                    app:idHidePassword="@id/eye_cl_rep"
                    android:maxLines="1"
                    android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

