<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <com.dpcsa.compon.custom_components.ElementMenu
        android:id="@+id/menu"
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:id="@+id/no_v"
        android:layout_width="match_parent"
        android:layout_height="140dp"
    >
        <TextView
            android:id="@+id/enter"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/im"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:text="Log in"
            android:textSize="@dimen/dim_28"
            android:textColor="@color/title"
            />

        <com.dpcsa.compon.custom_components.ComponImageView
            android:id="@+id/im"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_avatar_null"
            android:scaleType="centerCrop"
            app:oval="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="140dp"
    >
        <com.dpcsa.compon.custom_components.ComponImageView
            android:id="@+id/photo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:oval="true"
            />

        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/photo"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginRight="@dimen/dim_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/last_name"
            android:layout_toRightOf="@id/photo"
            android:layout_below="@id/name"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dim_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/exit"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/photo"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginBottom="@dimen/dim_20"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dim_24"
            android:textColor="@color/primaryDark"
            />

    </RelativeLayout>
</RelativeLayout>