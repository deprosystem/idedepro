<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/color_105"
    >
        <RelativeLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="110dp"
        >
            <com.dpcsa.compon.custom_components.ComponImageView
                android:id="@+id/photo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                app:oval="true"
                />

            <TextView
                android:id="@+id/l_name"
                android:layout_toRightOf="@id/photo"
                android:layout_below="@id/f_name"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="@dimen/dim_4"
                android:layout_marginRight="@dimen/dim_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@color/title"
                />

            <TextView
                android:id="@+id/f_name"
                android:layout_toRightOf="@id/photo"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginTop="6dp"
                android:layout_marginRight="@dimen/dim_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dim_18"
                />

            <TextView
                android:id="@+id/exit"
                android:layout_toRightOf="@id/photo"
                android:layout_below="@id/l_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginRight="10dp"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Sign out"
                android:textSize="@dimen/dim_20"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/nodata"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
            <TextView
                android:id="@+id/enter"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rr"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="@dimen/dim_40"
                android:gravity="center_vertical"
                android:text="Войти"
                android:textSize="22dp"
                />

            <RelativeLayout
                android:id="@+id/rr"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/shape_1003"
                />

            <com.dpcsa.compon.custom_components.ComponImageView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_profile"
                android:scaleType="centerCrop"
                app:oval="true"
                />

        </RelativeLayout>
    </RelativeLayout>
    <com.dpcsa.compon.custom_components.ElementMenu
        android:id="@+id/menu"
        android:layout_below="@id/rel"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>