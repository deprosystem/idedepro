<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white"
    >
    <com.dpcsa.compon.custom_components.ComponSpinner
        android:id="@+id/mark"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />
    <com.dpcsa.compon.custom_components.ComponSpinner
        android:id="@+id/model"
        android:layout_toRightOf="@id/mark"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />
    <com.dpcsa.compon.custom_components.ComponSpinner
        android:id="@+id/year"
        android:layout_below="@id/mark"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginTop="@dimen/dim_14"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/chose"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dim_20"
        android:layout_width="200dp"
        android:layout_height="@dimen/dim_40"
        android:background="@drawable/shape_1004"
        android:gravity="center"
        android:text="Ð¡hoose"
        android:textSize="@dimen/dim_20"
        android:textColor="@color/white"
        />

    <com.dpcsa.compon.custom_components.SeekBarRange
        android:id="@+id/seekb"
        android:layout_below="@id/year"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginTop="44dp"
        android:layout_marginRight="@dimen/dim_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barHeight="12dp"
        app:betweenColor="@color/primaryDark"
        app:thumbImg="@drawable/slider_pin"
        app:barDrawable="@drawable/shape_1005"
        app:minValueSeek="1"
        app:maxValueSeek="100"
        app:minStartValue="1"
        app:maxStartValue="100"
        app:sliderViewInfo="@id/sl"
        app:showMinValue="@id/min"
        app:showMaxValue="@id/max"
        />

    <TextView
        android:layout_below="@id/year"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginTop="@dimen/dim_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        />

    <TextView
        android:layout_alignParentRight="true"
        android:layout_below="@id/year"
        android:layout_marginTop="@dimen/dim_12"
        android:layout_marginRight="@dimen/dim_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        />

    <TextView
        android:id="@+id/sl"
        android:layout_below="@id/year"
        android:layout_marginTop="@dimen/dim_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/min"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/max"
        android:layout_alignParentRight="true"
        android:layout_marginTop="190dp"
        android:layout_marginRight="@dimen/dim_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/clear"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_1007"
        android:gravity="center"
        android:text="Clear"
        />

</RelativeLayout>